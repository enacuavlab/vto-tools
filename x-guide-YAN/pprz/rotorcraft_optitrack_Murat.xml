<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="148" ground_alt="146" lat0="43.5640917" lon0="1.4829201" max_dist_from_home="20" name="Rotorcraft Optitrack (ENAC)" security_height="0.3" wp_frame="LTP">
  <header>

  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="STDBY" x="-0.7" y="-0.8"/>
    <waypoint name="TD" x="0.8" y="-1.7"/>

    <waypoint name="S1" x="2.0" y="3.0"/>
    <waypoint name="S2" x="2.0" y="-3.0"/>
    <waypoint name="S3" x="-2.0" y="-3.0"/>
    <waypoint name="S4" x="-2.0" y="3.0"/>

    <waypoint name="_N1" x="4.5" y="5.2"/>
    <waypoint name="_N2" x="4.5" y="-5.2"/>
    <waypoint name="_N3" x="-4.5" y="-5.2"/>
    <waypoint name="_N4" x="-4.5" y="5.2"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Net">
      <corner name="_N1"/>
      <corner name="_N2"/>
      <corner name="_N3"/>
      <corner name="_N4"/>
    </sector>
    <sector color="green" name="Survey" >
      <corner name="S1"/>
      <corner name="S2"/>
      <corner name="S3"/>
      <corner name="S4"/>
    </sector>
  </sectors>
  <variables>
    <variable init="0.1" var="fp_throttle"/>
  </variables>
  <modules>
    <module name="nav" type="survey_rectangle_rotorcraft"/>
  </modules>
  <exceptions>
    <!--exception cond="(electrical.bat_critical)" deroute="land here"/-->
    <!--exception cond="datalink_time > 2" deroute="Ramp down"/-->
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <exception cond="block_time>3" deroute="Takeoff"/>
      <call_once fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f() @DEREF z @GT 1.0" deroute="Standby"/>
      <call_once fun="NavSetWaypointHere(WP_STDBY)"/>
      <attitude pitch="0" roll="0" throttle="0.1" until="stage_time>1" vmode="throttle"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="STDBY"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <call_once fun="nav_set_heading_deg(0)"/>
      <stay wp="STDBY"/>
    </block>
    <block name="Mission_start" strip_button="Mission_start">
      <set value="1" var="fc_rotor_started"/>
      <stay wp="STDBY"/>
    </block>
    <block name="Mission_stop" strip_button="Mission_stop">
      <set value="0" var="fc_rotor_started"/>
      <stay wp="STDBY"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call_once fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <stay wp="TD" until="stage_time @GT 2"/>
    </block>
    <block name="flare">
      <exception cond="stateGetPositionEnu_f()->z @LT 0.3" deroute="Ramp down"/>
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="Ramp down">
      <exception cond="guidance_v_delta_t @LT 0.1*9600." deroute="Landed"/>
      <set var="fp_throttle" value="guidance_v_delta_t/9600."/>
      <stay throttle="fp_throttle-0.1*stage_time" vmode="throttle" wp="TD"/>
    </block>
    <block name="Landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
